<h1>Register a new scientist</h1>

<%if @scientist.errors %>
    <% @scientist.errors.full_messages.each do |message|%>
        <div><%= message %></div>
    <%end%>

<%end%>

<%= form_for @scientist do |f|%>
    <%= f.label :name %>
    <%= f.text_field :name %>
    <%= f.label :field_of_study %>
    <%= f.text_field :field_of_study %>
    <%= f.submit "Make a new Scientist"%>
<%end%>